{
  "allow": {
    "Read": [
      "*"
    ],
    "Grep": [
      "*"
    ],
    "Glob": [
      "*"
    ],
    "Edit": [
      "*"
    ],
    "Write": [
      "*"
    ],
    "Bash": [
      "npm *",
      "node *",
      "git *",
      "docker *",
      "docker-compose *",
      "ls *",
      "mkdir *",
      "pwd",
      "cd *",
      "cat *",
      "grep *",
      "find *"
    ]
  },
  "deny": {
    "Read": [
      ".env",
      "**/.env",
      "**/.env.*",
      "**/secrets/**",
      "**/*.key",
      "**/*.pem",
      "**/credentials.json"
    ],
    "Write": [
      ".env",
      "**/.env"
    ],
    "Bash": [
      "rm -rf *",
      "sudo *",
      "chmod *",
      "chown *"
    ]
  },
  "env": {
    "NODE_ENV": "development"
  },
  "hooks": {
    "userPromptSubmit": [],
    "preToolCall": [
      {
        "command": "if echo \"$TOOL_INPUT\" | grep -q '\"run_in_background\":\\s*true'; then echo 'Error: run_in_background is not allowed. Please start dev servers manually in VSCode terminal.' && exit 1; fi",
        "continueOnError": false
      }
    ],
    "postToolCall": []
  }
}
